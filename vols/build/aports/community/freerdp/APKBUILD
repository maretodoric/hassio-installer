#     - CVE-2020-4030
#     - CVE-2020-11099
#     - CVE-2020-11098
#     - CVE-2020-11097
#     - CVE-2020-11095
#     - CVE-2020-11096
#   2.0.0-r1:
#     - CVE-2020-13398
#     - CVE-2020-13397
#     - CVE-2020-13396
#   2.0.0-r0:
#     - CVE-2020-11521
#     - CVE-2020-11522
#     - CVE-2020-11523
#     - CVE-2020-11524
#     - CVE-2020-11525
#     - CVE-2020-11526
#   2.0.0_rc4-r0:
#     - CVE-2018-8786
#     - CVE-2018-8787
#     - CVE-2018-8788
#     - CVE-2018-8789

build() {
	export CFLAGS="$CFLAGS -D_BSD_SOURCE"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DWITH_ALSA=ON \
		-DWITH_CUPS=ON \
		-DWITH_CHANNELS=ON \
		-DBUILTIN_CHANNELS=OFF \
		-DWITH_DIRECTFB=OFF \
		-DWITH_FFMPEG=OFF \
		-DWITH_GSM=ON \
		-DWITH_GSTREAMER_1_0=ON \
		-DWITH_IPP=OFF \
		-DWITH_JPEG=ON \
		-DWITH_OPENSSL=ON \
		-DWITH_PCSC=OFF \
		-DWITH_PULSE=OFF \
		-DWITH_WAYLAND=ON \
		-DWITH_SERVER=ON \
		-DWITH_X11=ON \
		-DWITH_XCURSOR=ON \
		-DWITH_XEXT=ON \
		-DWITH_XKBFILE=ON \
		-DWITH_XI=ON \
		-DWITH_XINERAMA=ON \
		-DWITH_XRENDER=ON \
		-DWITH_XV=ON \
		-DWITH_ZLIB=ON \
		-DWITH_NEON=OFF
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

