# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=junit
pkgver=4.13.2
pkgrel=0
pkgdesc="A programmer-oriented testing framework for Java"
url="http://junit.org/"
arch="noarch"
license="EPL-1.0"
options="!check"
source="https://search.maven.org/remotecontent?filepath=$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.jar"

# secfixes:
#   4.13.1-r0:
#     - CVE-2020-15250

package() {
	local _javadir=/usr/share/java
	install -dm755 "$pkgdir"$_javadir
	install -m644 "$srcdir"/$pkgname-$pkgver.jar "$pkgdir"$_javadir
	cd "$pkgdir"$_javadir
	ln -s $pkgname-$pkgver.jar $pkgname.jar
}

sha512sums="a31b9950f929a7e5a600d89787ef40e42a8a8e2392e210d0c0f45b3572937670a18a524f1815508cd1152cd1eaa7275cb7430ba45c053be365c83c231bccd3f0  junit-4.13.2.jar"
