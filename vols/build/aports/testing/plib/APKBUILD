# Maintainer:
pkgname=plib
pkgver=1.8.5
pkgrel=1
pkgdesc="Portable Game Library"
url="http://plib.sourceforge.net"
arch="all"
license="LGPL-2.0-or-later"
makedepends="$depends_dev libxi-dev libxmu-dev mesa-dev"
source="http://plib.sourceforge.net/dist/plib-$pkgver.tar.gz
	includes-fix.patch
	CVE-2011-4620.patch
	CVE-2012-4552.patch
	"

# secfixes:
#   1.8.5-r1:
#     - CVE-2012-4552
#     - CVE-2011-4620

prepare() {
	default_prepare
	update_config_guess
	update_config_sub
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

