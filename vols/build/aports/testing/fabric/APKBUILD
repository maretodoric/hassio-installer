pkgname=fabric
_pkgname=fabric
pkgver=2.6.0
pkgrel=2
pkgdesc="simple pythonic remote deployment tool"
options="!check" # Fails to find 'fabfile' module
url="https://www.fabfile.org/"
arch="noarch"
license="BSD-2-Clause"
depends="py3-paramiko py3-invoke"
