	pkgdesc="Allow user to record personal greeting for SEMS"
	depends="sems"
	cd "$pkgdir"
	_mv_sub etc/sems/etc/annrecorder.conf \
		usr/share/sems/audio/annrecorder \
		usr/lib/sems/plug-in/annrecorder.so
}

