	pkgdesc="Conference bridge via DI (xmlrpc) for SEMS"
	depends="sems sems-xmlrpc2di"
	cd "$pkgdir"
	_mv_sub etc/sems/etc/webconference.conf \
		usr/share/sems/audio/webconference \
		usr/lib/sems/plug-in/webconference.so
}

