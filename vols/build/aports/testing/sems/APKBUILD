	pkgdesc="Support for SEMS to register to a SIP server"
	depends="sems"
	_mv_sub \
		etc/sems/etc/reg_agent.conf \
		usr/lib/sems/plug-in/reg_agent.so \
		usr/lib/sems/plug-in/registrar_client.so
