	pkgdesc="Voicebox (call in for messsages) for SEMS"
	depends="sems"
	cd "$pkgdir"
	_mv_sub etc/sems/etc/voicebox.conf \
		usr/share/sems/audio/voicebox \
		usr/lib/sems/plug-in/voicebox.so \
