# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=rofi-json-menu
pkgver=0.2.0
pkgrel=0
pkgdesc="Plugin to use rofi for custom menus"
url="https://github.com/marvinkreis/rofi-json-menu"
arch="all !riscv64 !s390x"  # blocked by rofi -> librsvg -> rust
license="MIT"
depends="cmd:rofi"
makedepends="
	cmake
	json-c-dev
	rofi-dev
	"
source="https://github.com/marvinkreis/rofi-json-menu/archive/$pkgver/rofi-json-menu-$pkgver.tar.gz"
options="!check"  #Â no tests provided

build() {
	local crossopts=
	if [ "$CBUILD" != "$CHOST" ]; then
		crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		$crossopts .
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
