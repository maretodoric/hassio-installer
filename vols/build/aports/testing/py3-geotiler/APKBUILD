# Maintainer: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
pkgname=py3-geotiler
_pkgorig=geotiler
pkgver=0.14.6
pkgrel=1
pkgdesc="GeoTiler is a library to create map using tiles from a map provider"
url="https://github.com/wrobell/geotiler"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	python3
	py3-aiohttp
	py3-cytoolz
	py3-pillow
	py3-setuptools
	"
checkdepends="
	python3-dev
	py3-numpy
	py3-pytest
	py3-pytest-cov
	"
makedepends="
	py3-build
	py3-installer
	py3-setuptools-git
	py3-wheel
	"
source="$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/g/geotiler/geotiler-$pkgver.tar.gz"
builddir="$srcdir/$_pkgorig-$pkgver"

build() {
	python3 -m build --wheel --no-isolation
}

check() {
	python3 -m pytest
}

package() {
	python3 -m installer --destdir="$pkgdir" dist/*.whl
}

sha512sums="
