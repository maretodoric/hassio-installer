# Contributor: psykose <alice@ayaya.dev>
# Maintainer: Milan P. StaniÄ‡ <mps@arvanta.net>
pkgname=dosbox-staging
pkgver=0.78.1
pkgrel=0
pkgdesc="revitalized dosbox DOS-emulator"
url="https://dosbox-staging.github.io/"
arch="all !x86" # TEXTREL on x86
license="GPL-2.0-or-later"
options="!check" # no
depends="!dosbox" # dosbox provides same binary in /usr/bin/dosbox
makedepends="
	alsa-lib-dev
	fluidsynth-dev
	libexecinfo-dev
	libpng-dev
	libslirp-dev
	opus-dev
	opusfile-dev
	sdl2-dev
	sdl2_net-dev
	meson
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/dosbox-staging/dosbox-staging/archive/v$pkgver.tar.gz
	fix-execinfo.patch
	"

build() {
	abuild-meson \
	--prefix /usr \
	--buildtype=release \
	-Duse_mt32emu=false \
	. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
