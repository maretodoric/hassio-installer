	lxqt-qtplugin lxqt-notificationd lxqt-archiver
	lxqt-policykit lxqt-openssh-askpass lxqt-sudo
	pm-utils qtermwidget qterminal openbox xdg-utils
	"

package() {
	mkdir -p "$pkgdir"
}
