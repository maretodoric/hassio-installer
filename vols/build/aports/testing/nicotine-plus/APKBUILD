pkgname=nicotine-plus
pkgver=3.2.2
pkgrel=0
pkgdesc="Graphical client for the SoulSeek peer-to-peer system"
url="https://nicotine-plus.github.io/nicotine-plus"
arch="noarch"
license="GPL-3.0-or-later"
depends="gtk+3.0 py3-gobject3 python3"
