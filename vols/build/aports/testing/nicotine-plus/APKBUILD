subpackages="$pkgname-doc $pkgname-lang"
source="nicotine-plus-$pkgver.tar.gz::https://github.com/Nicotine-Plus/nicotine-plus/archive/$pkgver.tar.gz"

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

